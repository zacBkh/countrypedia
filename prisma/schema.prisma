generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id        Int    @id @default(autoincrement())
  name      String @unique // required bcs no default
  likeCount Int    @default(0)
}

